<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:ignore="ResourceName">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_phone_accelerate_widget"
        android:layoutDirection="ltr"
        android:orientation="horizontal">
        <!--  高度适配  -->
        <ImageView
            android:layout_width="0px"
            android:layout_height="169dp"
            android:visibility="invisible" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--    宽度适配    -->
            <ImageView
                android:layout_width="169dp"
                android:layout_height="0px"
                android:visibility="invisible" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:visibility="invisible"/>
                <LinearLayout
                    android:id="@+id/phone_accelerate_container"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="68"
                    android:layout_centerHorizontal="true"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="18"
                        android:visibility="invisible"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="61"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/phone_accelerate_memory_used"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70%"
                            android:layout_gravity="left"
                            android:textColor="@color/color_1E1F24"
                            android:textSize="@dimen/font_size_26sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/font_size_10sp"
                            android:autoSizeMaxTextSize="@dimen/font_size_26sp"
                            android:autoSizeStepGranularity="1sp"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/memory_used_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="内存占用"
                            android:textColor="@color/color_1E1F24"
                            android:textSize="@dimen/font_size_15sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/font_size_10sp"
                            android:autoSizeMaxTextSize="@dimen/font_size_15sp"
                            android:autoSizeStepGranularity="1sp"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="12"
                        android:visibility="invisible"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="68">
                        <ProgressBar
                            android:id="@+id/phone_accelerate_progressbar"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="70"
                            android:progressDrawable="@drawable/progress_circle" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:visibility="invisible"/>
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:layout_centerInParent="true"
                                android:src="@drawable/phone_accelerate_bottom_add_widget_icon"/>
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:visibility="invisible"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="12"
                        android:visibility="invisible"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/one_phone_accelerate_btn"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="42"
                    android:layout_marginStart="@dimen/dimen_12dp"
                    android:layout_marginEnd="@dimen/dimen_12dp"
                    android:background="@drawable/phone_accelerate_add_widget_view_bg"
                    android:gravity="center"
                    android:text="一键加速"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_16dp"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>